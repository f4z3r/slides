{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "python312Packages.presenterm-export@0.2.7",
    "presenterm@0.15.1",
    "kitty@0.43.1",
    "vault-bin@1.20.4",
    "lolcat@100.0.1",
    "qrencode@4.1.1"
  ],
  "shell": {
    "scripts": {
      "present": [
        "rm -rf ./assets/vault/raft/",
        "rm -f ./assets/vault/vault.db",
        "rm -f ./assets/vault/keys.json",
        "presenterm -xpP slides.md -c ../assets/presenterm/config.yaml"
      ],
      "create-qr": [
        "echo https://github.com/f4z3r/vault-workshop | qrencode -t utf8i | lolcat -f"
      ],
      "notes": [
        "presenterm -l slides.md"
      ]
    }
  }
}
