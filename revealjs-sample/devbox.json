{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "asciidoctor-with-extensions@2.0.23",
    "miniserve@0.28.0",
  ],
  "shell": {
    "scripts": {
      "build": [
        "asciidoctor-revealjs slides.adoc",
      ],
      "serve": [
        "asciidoctor-revealjs slides.adoc",
        "cd ..",
        "miniserve .",
      ],
      "present": [
        "xdg-open 'http://localhost:8080'",
      ],
    },
  },
}
